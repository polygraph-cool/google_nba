<div class='graphic'>
	<div class='graphic__chart'>
		<div class='chart__era'>
			<select class='era__select'></select>
			<div class='ui__search'>
				<div class='search__input'>
					<input placeholder='Find a player...'>
				</div>
			</div>
		</div>
		<div class='border-top'>
			<p class='border-top__text'>Select a play</p>
		</div>
	</div>
	<div class='graphic__sticky'>
		<div class='border-top'>
			<p class='border-top__text'>Watch the play</p>
		</div>
		<div class='graphic__video'></div>
		<div class='graphic__ui'>
			<div class='ui__category'>
				<p class='category__label ui-label'>Filter play type:</p>
				<ul class='category__options'>
					<li data-type='dk'>Dunk</li>
					<li data-type='gw'>Game-winner</li>
					<li data-type='bl'>Block</li>
				</ul>
			</div>
			<div class='ui__team'>
				<p class='team__label ui-label'>Filter team:</p>
				<select class='team__options'></select>
			</div>
			<div class='ui__search'>
				<div class='search__input'>
					<input placeholder='Player name...'>
				</div>
				<div class='search__label'>@@include('search.svg')</div>
			</div>
		</div>
		<div class='results'></div>
	</div>
</div>