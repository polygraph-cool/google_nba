$logo-size = 48px

header 
	text-align center
	z-index set-index('overlay')
	width 10rem
	margin 2.5rem auto
	a.logo
		clearfix()
		border-bottom none
		display block
		.logo__text
			text-transform uppercase
			color $off-black
			display inline-block
			width 100%
			margin 0
			padding 0
			line-height $logo-size
			font-size 0.9rem
			font-weight 400
			letter-spacing 0.05em
		.logo__svg 
			width $logo-size
			height $logo-size
			fill $off-black
			display block
			margin 0 auto
