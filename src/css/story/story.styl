fontify($ptSerif, $ptSerif-hash, $serif)
fontify($roboto, $roboto-hash, $sans)

html, body
	background-color #fff
	color $off-black
	font-size 17px

p 
	line-height 1.7
	
.graphic
	display flex
	justify-content space-between
	align-items center
	position relative

.graphic__sticky
	width 40%
	position absolute
	padding 2rem 1rem 0 1rem
	top 0
	right 0
	transform translate3d(0, 0, 0)
	&.is-fixed
		position fixed
	&.is-bottom
		top auto
		bottom 0
		
.spacer 
	height 100vh