.graphic__video
	max-width 60rem
	margin 0 auto
	padding 1rem
	display flex
	justify-content space-between
	align-items flex-end

	.video__year
		width 15%
		&.is-active
			width 35%
		
	.year__label
		text-transform capitalize
		font-size 0.8rem
		font-weight bold
	
	.label__title
		margin-left 0.75rem
		font-weight normal