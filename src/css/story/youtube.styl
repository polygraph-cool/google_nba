.graphic__video
	width 40%
	position absolute
	padding 1rem
	top 0
	right 0
	transform translate3d(0, 0, 0)
	&.is-fixed
		position fixed

	.year__label
		font-size 0.8rem
		padding-bottom 0.25em

	.label__year
		text-transform capitalize
		font-weight bold
		padding-bottom 0.25rem

	.label__title
		color #7d7d7d
		margin-left 0.5em