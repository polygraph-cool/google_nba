.graphic__chart
	width 55%
	padding 1rem
	.year
		position relative
	.year__chart
		position relative
		margin-bottom 6rem

		&:before
			content '#1'
			font-size 0.6rem
			font-weight bold
			display block
			position absolute
			bottom 0.25rem
			left $chart-margin

		&:after
			content '#100'
			font-size 0.6rem
			font-weight bold
			display block
			position absolute
			bottom 0.25rem
			right $chart-margin

	.year__text
		display flex
		flex-wrap 	wrap
		align-items center
		padding-bottom 5rem
		justify-content space-between

	.text__label
		width 100%
		padding .5rem 1rem .7rem
		font-size 2.6rem
		text-transform capitalize
		font-weight 100
		line-height 2.8rem
		letter-spacing -.02em
		color black
		align-self flex-end
		&:before
			content ''
			display block
			font-size 0.6rem
			text-transform uppercase
			color $gray
			font-weight 500
			line-height 1.5
			letter-spacing .04em

	.text__description
		padding 0 1rem
		font-size 0.9rem
		line-height 1.6
		font-weight 400
		width 100%
		align-self flex-end
		color black
		color rgba(0,0,0,.8)

	.year__title
		text-align center
		padding 0px
		line-height	1.5
		color $off-black
		font-size 0.65em
		text-transform uppercase
		font-weight 900
		padding-right $chart-margin
		color black
		margin-bottom -2.2rem



	.axis__label
		text
			font-size 0.6rem
			fill $gray
		line
			stroke lighten($gray, 20)
			stroke-width 0.5px
			stroke-dasharray 4px 4px
	.item
		&.is-selected .item__bar
			fill $gray
		&.is-playing .item__bar
			fill $red
		&.is-player .item__bar
			fill $blue
		&:hover .item__bar
			fill $gray
		
	.item__bar
		stroke #fff
		fill $gray-light
		pointer-events none
	
	.item__interact
		cursor pointer
		opacity 0

	.year__detail
		position absolute
		bottom 0
		left 0
		width 5.5rem
		display flex
		flex-wrap wrap
		border 1px solid #fff
		border-radius 5px
		background #fff
		box-shadow 0 0 0.5rem #fff
		pointer-events none
		visibility hidden
		&.is-visible
			visibility visible

	.detail__text
		width 65%
		order 2
		font-size 0.9rem
		font-weight 700
		line-height 1.2
		color black
		span
			display block
			padding-bottom 0.25rem
			color $gray-dark
			font-weight 400
		.text__title
			display block
			color black
			font-weight 500
			font-size .75rem
	
	.detail__thumbnail
		width 100%
		height 3rem
		z-index set-index('overlay')
		background-color black
		background-repeat no-repeat
		background-position center center
		background-size cover
		order 2


	.year__annotation
		background #fff
		z-index set-index('overlay')
		position relative
		transform translateY(-1.5rem)
		visibility hidden
		&.is-visible
			visibility visible
	.annotation__text
		width 50%
		position absolute
		font-size 0.8rem
		font-weight 700
		line-height 1.2
		span
			display block
			padding-bottom 0.2rem
			font-weight 400
		.text__arrow
			transform rotate(180deg)
			text-align right
			color $gray-dark
			line-height	1
			margin-bottom .2rem
		.text__click
			font-size 0.75em
			text-transform uppercase
			letter-spacing 0.05em
			color $gray-dark
			font-weight 500
			padding-bottom 0.1rem
		.text__title
			color $off-black
			font-weight 500
		.text__date 
			color $gray
			padding-bottom 0
			font-size 0.8em