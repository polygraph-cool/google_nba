.graphic__chart
	max-width 60rem
	margin 0 auto
	padding 1rem
	
	.year
		padding-bottom 1rem
	
	.year__plays
		display flex
	
	.play 
		width 2%
		height 2rem
		background-color red
		border-right 1px solid white
		cursor pointer
	
	.chart__key
		display flex
		margin-top 2rem
		p
			font-size 0.8rem
			font-weight bold
			display inline-block
			width 6rem
			text-align center
			padding 0 1rem
		