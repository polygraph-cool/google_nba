.graphic__chart
	width 55%
	padding 1rem

	.year__chart
		position relative
		margin-bottom 6rem

		&:before
			content '#1'
			font-size 0.6rem
			font-weight bold
			display block
			position absolute
			bottom 0.25rem
			left $chart-margin

		&:after
			content '#100'
			font-size 0.6rem
			font-weight bold
			display block
			position absolute
			bottom 0.25rem
			right $chart-margin

	.year__text
		display flex
		align-items center
		padding-bottom 5rem
		justify-content space-between

	.text__label
		width auto
		padding 0 1rem
		font-size 2rem
		text-transform capitalize
		font-weight 400
		line-height 2.8rem
		letter-spacing -.02em
		color black
		align-self flex-end
		&:before
			content 'Most-viewed plays'
			display block
			font-size 0.6rem
			text-transform uppercase
			color $gray
			font-weight 500
			line-height 1.5
			letter-spacing .04em

	.text__description
		font-size 0.9rem
		line-height 1.6
		font-weight 400
		width 18rem
		align-self flex-end
		color black
		color rgba(0,0,0,.8)

	.year__title
		text-align right
		color $off-black
		font-size 0.6rem
		font-weight 500
		padding-right $chart-margin
		letter-spacing 0.03em
		color black
		text-transform uppercase


	.axis__label
		text
			font-size 0.6rem
			fill $gray
		line
			stroke lighten($gray, 20)
			stroke-width 0.5px
			stroke-dasharray 4px 4px
	.item
		cursor pointer
		stroke #fff
		fill $gray-light
		&.is-selected
			fill $gray
		&.is-playing
			fill $red
		&.is-player
			fill $blue
		&:hover
			fill $gray

	.year__detail
		position absolute
		bottom 0
		left 0
		width 15rem
		display flex
		padding 0.5rem
		border 1px solid #aaa
		border-radius 5px
		background #fff
		box-shadow 0 0 0.5rem #fff
		pointer-events none
		visibility hidden
		&.is-visible
			visibility visible

	.detail__text
		width 65%
		font-size 0.65rem
		font-weight 700
		line-height 1.2
		padding 0 1em
		span
			display block
			padding-bottom 0.25rem
			color $gray-dark
			font-weight 400
		.text__title
			display block
			color black
			font-weight 500
			font-size .75rem
	
	.detail__thumbnail
		width 35%
		height 3.5rem
		z-index set-index('overlay')
		background-color black
		background-repeat no-repeat
		background-position center center
		background-size cover


	.year__annotation
		background #fff
		z-index set-index('overlay')
		position relative
		transform translateY(-0.25rem)
		visibility hidden
		&.is-visible
			visibility visible
	.annotation__text
		width 50%
		position absolute
		font-size 0.8rem
		font-weight 700
		line-height 1.2
		span
			display block
			padding-bottom 0.2rem
			font-weight 400
		.text__click
			font-size 0.75em
			text-transform uppercase
			letter-spacing 0.05em
			color $gray-dark
			font-weight 500
			padding-bottom 0.1rem
		.text__title
			color $off-black
			font-weight 500
		.text__date 
			color $gray
			padding-bottom 0
			font-size 0.8em