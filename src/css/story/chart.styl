	.text__label
		padding-right 1rem
		font-size 1.5rem
		text-transform capitalize

	.year__plays
		display flex
		flex-grow 1
		width auto
		flex-wrap wrap

	.plays__detail
		width 100%
		display block
		height 1rem

	.plays__items
		display flex
		width 100%

	.item
		// height 1.25rem
		cursor pointer
		stroke #fff
		fill $gray-light
		// position relative
		// background-color $gray-light
		// border-right 1px solid #fff
		&.is-active
			fill $gray-dark
		&.is-player
			fill #207bc0
		&:hover
			fill $gray

	.plays__annotation
		width 100%
		position relative
	.annotation__thumbnail
		display none
		width 20%
		height 500%
		position absolute
		top 0
		left 0
		transform translateY(-86%)
		z-index set-index('overlay')
		background-color black
		background-repeat no-repeat
		background-position center center
		background-size cover
		&.is-visible
			display block

	.annotation__text
		color #7d7d7d
		font-weight 600
		text-transform uppercase
		font-size 0.6rem
		visibility hidden
	.plays__detail
		position relative

	.detail__text
		position absolute
		padding-top 0.25em
		font-size 0.65rem
		line-height 1.2
		font-weight bold
		visibility hidden
		&.is-visible
			visibility visible

	.chart__key
		display flex
		margin-top 2rem
		p
			font-size 0.8rem
			font-weight bold
			display inline-block
			width 6rem
			text-align center
			padding 0 1rem
