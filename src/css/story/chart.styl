.graphic__chart
	width 60%
	padding 1rem

	.year__chart
		position relative
		margin-bottom 2rem

	.year__text
		display flex
		align-items center
		padding-bottom 1rem

	.text__label
		width 15rem
		padding-right 1rem
		padding-left 1rem
		font-size 1.5rem
		text-transform capitalize
	
	.text__description
		font-size 0.9rem

	.plays__detail
		width 100%
		display block
		height 1rem

	.plays__items
		display flex
		width 100%

	.item
		cursor pointer
		stroke #fff
		fill $gray-light
		&.is-active
			fill $gray-dark
		&.is-player
			fill #207bc0
		&:hover
			fill $gray

	.plays__annotation
		width 100%
		position relative
	.annotation__thumbnail
		display none
		width 20%
		height 500%
		position absolute
		top 0
		left 0
		transform translateY(-86%)
		z-index set-index('overlay')
		background-color black
		background-repeat no-repeat
		background-position center center
		background-size cover
		&.is-visible
			display block

	.annotation__text
		color #7d7d7d
		font-weight 600
		text-transform uppercase
		font-size 0.6rem
		visibility hidden
	
	.year__detail 
		position absolute
		top 0
		left 0
		&.is-visible
			visibility visible

	.detail__text
		font-size 0.65rem
		font-weight bold
		line-height 1.25
		text-shadow 0 0 3px white

	.chart__key
		display flex
		margin-top 2rem
		p
			font-size 0.8rem
			font-weight bold
			display inline-block
			width 6rem
			text-align center
			padding 0 1rem
