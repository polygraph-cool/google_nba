.graphic__chart
	width 100%
	order 2
	padding 1rem
	padding 0.5rem
	+mq('bp-4')
		width 55%
		padding 1rem
	.year
		position relative
		display none
		&.is-active 
			display block
		+mq('bp-4')
			display block
	.year__chart
		position relative
		margin-bottom 5rem
		width 100%
		+mq('bp-4')
			margin-bottom 6rem
		&.is-hidden-before:before
			opacity 0
		&.is-hidden-after:after
			opacity 0

		&:before
			content '#1 most viewed'
			text-transform uppercase
			width 2rem
			font-size 0.6rem
			line-height 1.2
			font-weight bold
			display block
			position absolute
			bottom 1rem
			left $chart-margin
			transform translateY(100%)
			transition 100ms opacity

		&:after
			content '#100'
			font-size 0.6rem
			font-weight bold
			display block
			position absolute
			bottom 0.25rem
			right $chart-margin
			transition 100ms opacity

	.year__text
		display flex
		flex-wrap wrap
		align-items center
		padding-bottom 5rem
		justify-content space-between
		display none
		+mq('bp-4')
			display block

	.text__label
		width 100%
		padding 0.5rem 1rem 1rem
		font-size 2.6rem
		text-transform capitalize
		font-weight 100
		line-height 2.8rem
		letter-spacing -0.02em
		color black
		align-self flex-end

	.text__description
		padding 0 1rem
		font-size 0.8rem
		line-height 1.7
		font-weight 400
		width 100%
		align-self flex-end
		color $off-black
		span
			color $blue
			background linear-gradient(#fff,#fff),linear-gradient(#fff,#fff),linear-gradient($blue,$blue)
			background-size .05em 1px,.05em 1px,1px 1px
			background-repeat no-repeat,no-repeat,repeat-x
			text-shadow 0.03em 0 #fff, -0.03em 0 #fff, 0 0.03em #fff, 0 -0.03em #fff, 0.06em 0 #fff, -0.06em 0 #fff, 0.09em 0 #fff, -0.09em 0 #fff, 0.12em 0 #fff, -0.12em 0 #fff, 0.15em 0 #fff, -0.15em 0 #fff
			background-position	0 95%,100% 95%,0 95%
			cursor pointer
			&:hover
				color $off-black
				background linear-gradient(#fff,#fff),linear-gradient(#fff,#fff),linear-gradient(#000,#000)
				background-size .05em 1px,.05em 1px,1px 1px
				background-repeat no-repeat,no-repeat,repeat-x
				text-shadow 0.03em 0 #fff, -0.03em 0 #fff, 0 0.03em #fff, 0 -0.03em #fff, 0.06em 0 #fff, -0.06em 0 #fff, 0.09em 0 #fff, -0.09em 0 #fff, 0.12em 0 #fff, -0.12em 0 #fff, 0.15em 0 #fff, -0.15em 0 #fff
				background-position	0 95%,100% 95%,0 95%

	.year__title
		text-align center
		letter-spacing .02em
		line-height	1.5
		color $off-black
		font-size 0.65em
		width 20em
		text-transform uppercase
		font-weight bold
		background #fff
		margin 0 auto
		position absolute
		top 0.3rem
		left 0
		right 0
		padding-right $chart-margin
		display none
		+mq('bp-4')
			display block

	.axis__label
		display none
		+mq('bp-4')
			display block
		text
			font-size 0.6rem
			fill $gray
		line
			stroke lighten($gray, 25)
			stroke-width 1px
			stroke-dasharray 2px 2px
			shape-rendering crispEdges
	
	.item
		&.is-selected .item__bar
			fill $gray
		&.is-playing .item__bar
			fill $red
		&.is-player .item__bar
			fill $blue
		&.is-team .item__bar
			fill $blue
		&.is-category .item__bar
			fill $blue
		&:hover .item__bar
			fill $gray

	.item__bar
		stroke #fff
		fill $gray-light
		pointer-events none

	.item__interact
		cursor pointer
		opacity 0

	.year__detail
		position absolute
		width 5.5rem
		pointer-events none
		opacity 0
		z-index set-index('overlay')
		display none 
		+mq('bp-4')
			display block
		&:before
			content ' '
			height 0
			width 0
			position absolute
			border 4px solid transparent
			border-bottom-color $off-black
			position absolute
			bottom 0
			left 0
			transform translateY(150%) rotate(180deg)
			visibility visible
		&:after
			content ' '
			height 0
			width 0
			position absolute
			border 4px solid transparent
			border-bottom-color $off-black
			position absolute
			bottom 0
			right 0
			transform translateY(150%) rotate(180deg)
			visibility hidden
		&.is-right:before
			visibility hidden
		&.is-right:after
			visibility visible
		&.is-visible
			opacity 1

	.detail__thumbnail
		width 100%
		height 3rem
		background-color $off-black
		background-repeat no-repeat
		background-position center center
		background-size cover

	.year__annotation
		z-index set-index('overlay')
		position relative
		transform translateY(-1.4rem)

	.annotation__text
		width 50%
		position absolute
		font-size 0.8rem
		font-weight 700
		line-height 1.2
		span
			display block
			padding-bottom 0.2rem
			font-weight 400
		.text__arrow
			height 1rem
			&:before
				content ' '
				height 0
				position absolute
				width 0
				border 4px solid transparent
				border-bottom-color $off-black
				position absolute
				top 0
				left 0
				visibility visible
			&:after
				content ' '
				height 0
				position absolute
				width 0
				border 4px solid transparent
				border-bottom-color $off-black
				position absolute
				top 0
				right 0
				transform translateX(4px)
				visibility hidden
		&.is-right .text__arrow:before
			visibility hidden
		&.is-right .text__arrow:after
			visibility visible
		.text__click
			font-size 0.75em
			text-transform uppercase
			letter-spacing 0.05em
			color $gray-dark
			font-weight 500
			padding-bottom 0.1rem
		.text__title
			color $off-black
			font-weight 500
			margin-top .2rem
		.text__date
			color $gray
			padding-bottom 0
			font-size 0.85em
	
	.year__slider
		width 90%
		margin 0 auto
		+mq('bp-4')
			display none