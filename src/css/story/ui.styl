.graphic__ui
	max-width 60rem
	margin 0 auto
	padding 1rem
	display flex
	// flex-direction row-reverse
	justify-content:center;
	.ui__search
		display:flex;
		.search__label
			font-size 0.8rem
			margin-right: 10px;
			text-transform: uppercase;
			font-weight: 600;
			letter-spacing: .5px;
			line-height: 29px;
		.search__input
			display block
			position relative
			&:before
				content ''
				width 0.5rem
				height 100%
				display inline-block
				position absolute
				top 0
				left 0
				background-color #207bc0
			input
				width 8rem
				border none
				border-bottom 1px solid $off-black
				font-size 0.8rem
				color $gray-dark
				margin-left 1.5rem
				height: 25px;
