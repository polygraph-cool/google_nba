.graphic__ui
	width 100%
	margin 0 auto
	padding 1rem 0
	flex-wrap wrap
	justify-content flex-start
	display none
	+mq('bp-4')
		display flex

	.ui-label
		color $gray
		font-size 0.7rem
	.ui__search
		display flex
		margin-top 1rem
		flex-wrap wrap
		justify-content center
	.ui__team
		select
			height 1.58rem	
			background white
			margin-top .2rem
			font-size .8rem
			font-family roboto
			border-color $gray
	.search__input
		input
			width 8rem
			border none
			border-bottom 1px solid $off-black
			font-size 0.8rem
			color $gray-dark
			line-height 1.5
	
	.search__label
		margin-left 0.5rem
		svg
			vertical-align baseline
			transform translateY(25%)
			width 1rem
			height 1.25rem
			fill $gray-dark

	.ui__category 
		flex-grow 0
	.category__options
		display flex
		margin-right 2rem
		li 
			cursor pointer
			margin 0.25em 0
			padding 0.25em 0.5em
			font-size 0.8rem
			border-top 1px solid $gray
			border-right 1px solid $gray
			border-bottom 1px solid $gray
			background-color white
			&.is-selected
				background-color $gray-light
			&:first-child
				border-left 1px solid $gray
				border-bottom-left-radius 3px
				border-top-left-radius 3px
			&:last-child
				border-bottom-right-radius 3px
				border-top-right-radius 3px

.chart__era
	display block
	+mq('bp-4')
		display none
	.era__select
		height 1.58rem	
		background white
		font-size 0.8rem
		font-family roboto
		border-color $gray
		margin-bottom 0.5rem
		
.results 
	display flex
	flex-wrap wrap
.result
	padding-right 2em
	color $gray-dark
	font-size 0.75rem
	line-height 1.4
	margin-bottom 0.5em
	.result__era
		text-transform capitalize
		
	&__count
		color $blue
		font-weight 400
		cursor pointer
		border-bottom 1px solid