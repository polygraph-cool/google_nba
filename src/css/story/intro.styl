.intro
	max-width 65rem
	margin 0 auto
	text-align center
	padding 2rem
	padding-bottom 4rem
	&__logo
		max-width 9rem
		margin 0 auto
		a
			text-decoration none
		svg
			fill $gray-dark
	&__hed
		margin-top 3rem
		font-size 4.5rem
		font-weight 100
		line-height 1.2
		margin-bottom 3rem
	&__dek
		margin-top 0.5rem
		font-weight 300
	&__desc
		font-size 18px
		font-weight	300
		max-width 700px
		line-height	1.4
		text-align center
		margin 0 auto
		margin-top	30px
		color #333
		margin-bottom 30px
	&__update
		font-size 13px
		color rgba(32, 123, 192, 0.84)
		span
			background #f1f1f1
			padding: 3px 12px;
			border-radius: 25px;
			
