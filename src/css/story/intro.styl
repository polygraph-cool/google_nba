.intro
	max-width 65rem
	margin 0 auto
	text-align center
	padding 2rem
	padding-bottom 3rem
	&__logo
		max-width 9rem
		margin 0 auto
		a
			text-decoration none
		svg
			fill $gray-dark
	&__hed
		margin-top 7rem
		font-size 3.5rem
		font-weight 100
		line-height 1.2
		margin-bottom 2rem
		span
			font-size 2.5rem
			margin 0 .4rem
	&__dek
		margin-top 0.5rem
		font-weight 300
	&__desc
		font-size 1rem
		font-weight	300
		max-width 32rem
		line-height	1.5
		text-align center
		margin 2rem auto
		color $gray-dark
		color $off-black
		font-family Roboto
	&__update
		font-size .67rem
		color $blue
		color black
		letter-spacing .04em
		text-transform uppercase
		span
			padding 0.4em 0.8em
			background-color rgba(255, 255, 0, 0.1)
			font-weight 900
			
