.intro
	max-width 65rem
	margin 0 auto
	text-align center
	padding 2rem
	padding-bottom 4rem
	&__logo
		max-width 9rem
		margin 0 auto
		a
			text-decoration none
		svg
			fill $gray-dark
	&__hed
		margin-top 3rem
		font-size 4.5rem
		font-weight 100
		line-height 1.2
		margin-bottom 3rem
	&__dek
		margin-top 0.5rem
		font-weight 300
	&__desc
		font-size 1rem
		font-weight	300
		max-width 40rem
		line-height	1.4
		text-align center
		margin 2rem auto
		color $gray-dark
		font-family Roboto
	&__update
		font-size 13px
		color $blue
		span
			background $off-white
			padding 0.3em 0.8em
			border-radius 1rem
			
